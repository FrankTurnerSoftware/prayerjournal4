<UserControl x:Class="PrayerJournal4.UserControls.StatusBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrayerJournal4.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StatusBar>
            <StatusBarItem HorizontalAlignment="Left">Left text</StatusBarItem>
            <StatusBarItem HorizontalAlignment="Center">Centre text</StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">Right text</StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
