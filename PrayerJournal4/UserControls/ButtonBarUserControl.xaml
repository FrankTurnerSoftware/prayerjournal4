<UserControl x:Class="PrayerJournal4.UserControls.ButtonBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrayerJournal4.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchBox" Grid.Column="0" 
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center">
                <TextBox.Text>
                    Search. . .
                </TextBox.Text>
            </TextBox>
            <Button Background="Transparent" 
                        Grid.Column="1" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <Button.Content>
                    <Image Source="/Images/3643762_find_glass_magnifying_search_zoom_icon.png" Width="25" Height="25"/>
                </Button.Content>
            </Button>
        </Grid>

        <Button Content="See History"  Margin="5" Grid.Column="1" HorizontalAlignment="Stretch"></Button>
        <Button Content="Show Tags" Margin="5" Grid.Column="2" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
